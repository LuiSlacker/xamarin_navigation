<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MathGame.GamePage">
	<StackLayout VerticalOptions="Center">
        
        <Label x:Name="heading" Text="x de x" VerticalOptions="Start" HorizontalOptions="Center" />
        <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Center">
            <Label x:Name="numero1" Text="5" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text="+" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label x:Name="numero2" Text="2" VerticalOptions="Center" HorizontalOptions="Center" />
        </StackLayout>

        <Entry x:Name="respuesta" Keyboard="Numeric"></Entry>

        <Button Text="Siguiente" Clicked="onBtnClicked"></Button>
    </StackLayout>
</ContentPage>
